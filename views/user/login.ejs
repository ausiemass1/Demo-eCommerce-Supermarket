    <style>

.contact-form {
  display: flex;
  flex-direction: column;
  gap: 10px;
 
  background-color: #ffffff;
  padding: 30px;
  width: 450px;
  border-radius: 20px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

::placeholder {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.form button {
  align-self: flex-end;
}

.flex-column > label {
  color: #151717;
  font-weight: 600;
}

.inputForm {
  border: 1.5px solid #ecedec;
  border-radius: 0.625rem;
  height: 3.125rem;
  display: flex;
  align-items: center;
  padding-left: 0.625rem;
  transition: 0.2s ease-in-out;
  border-bottom: none;
}

.input {
  margin-left: 0.625rem;
  border-radius: 0.625rem;
  border: none;
  border-bottom: none;
  width: 85%;
  height: 100%;
}

.input:focus {
  outline: none;
}

.inputForm:focus-within {
  border: 1.5px solid #2d79f3;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 0.625rem;
  justify-content: space-between;
}

.flex-row > div > label {
  font-size: 0.875rem;
  color: black;
  font-weight: 400;
}

.span {
  font-size: 0.875rem;
  margin-left: 0.3125rem;
  color: #2d79f3;
  font-weight: 500;
  cursor: pointer;
}

.button-submit {
  margin: 1.25rem 0 0.625rem 0;
  background-color: #151717;
  border: none;
  color: white;
  font-size: 0.9375rem;
  font-weight: 500;
  border-radius: 0.625rem;
  height: 3.125rem;
  width: 100%;
  cursor: pointer;
}

.button-submit:hover {
  background-color: #252727;
}

.p {
  text-align: center;
  color: black;
  font-size: 0.875;
  margin: 0.3125rem 0;
}

.btnlogin {
  margin-top: 0.625rem;
  width: 100%;
  height: 3.125rem;
  border-radius: 0.625rem;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 500;
  gap: 0.625rem;
  border: 1px solid #ededef;
  background-color: white;
  cursor: pointer;
  transition: 0.2s ease-in-out;
}

.btn:hover {
  border: 1px solid #2d79f3;
  ;
}
.loginForm{
  display: flex;
  justify-content: center; /* Centers horizontally */
  align-items: center;
}

.ini{
 border-bottom: none;
}

