<!DOCTYPE html>
<html lang="en">
  <head>
    <title>login</title>
    <!-- Required meta tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Compiled and minified materialize CSS -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <!-- materialise icons -->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <!-- font awesome icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <script src="https://d3js.org/d3.v7.min.js"></script>
    <!-- custom css styles -->
    <link rel="stylesheet" href="../../public/css/styles.css" />

    <style>
      .card-content {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        height: 100%;
        padding: 15px;
      }

      .card {
        border-radius: 20px;
      }

      /* Zoom effect on the image */
      .hover-zoom {
        transition: transform 0.3s ease;
      }

      .hover-zoom:hover {
        transform: scale(1.1);
      }

      /* Animation for the "Buy Now" button */
      .hover-button {
        background-color: #ff4081;
        color: white;
        transition: background-color 0.3s ease, transform 0.3s ease;
      }

      .hover-button:hover {
        background-color: #ff80ab;
        transform: scale(1.05);
      }

      /* Align text and input fields */
      input[type="number"],
      input[type="text"] {
        width: 100%;
        margin: 5px 0;
        text-align: center;
      }

      .card-image img {
        height: 200px;
        object-fit: cover;
      }

      /* Star rating styles */
      .product-rating {
        display: flex;
        justify-content: center;
        margin: 10px 0;
      }

      .product-rating .star {
        color: gold;
        font-size: 1.5rem;
        margin: 0 2px;
        transition: transform 0.2s ease;
      }

      /* Add a slight bounce animation when hovering over stars */
      .product-rating .star:hover {
        transform: scale(1.2);
      }

      .goog-te-banner-frame,
      .goog-tooltip,
      .goog-te-gadget-icon {
        display: none !important;
      }

      .hidden {
        display: none;
      }
    </style>
  </head>

  <body>
    <header>
      <!-- place navbar here -->
      <%- include("../partials/user_navbar1.ejs") %> <%-
      include("../partials/user_navbar2.ejs") %>
    </header>

    <main>
      <input
        type="text"
        id="search"
        placeholder="Search products..."
        onkeyup="myFunction()"
      />

      <!-- Pagination Controls -->
  <!-- Pagination Controls -->
  <%- include('../partials/pagination')%>
      <br />
      <!-- grid system -->
      <div class="">
        <div id="google_translate_element"></div>

        <h1 style="text-align: center">Products</h1>

        <div class="row">
          <% if (results.length > 0) { %> <% results.forEach(item => { %>

          <div class="col s12 m4 l3" id="product-<%= item.id %>">
            <div class="card large">
              <div class="card-image waves-effect waves-block waves-light">
                <img
                  class="activator card-img-top hover-zoom"
                  src="../../public/uploads/products/<%= item.image %>"
                  alt="<%= item.product_name %>"
                />
              </div>
              <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">
                  <%= item.product_name %>
                  <i class="material-icons right">more_vert</i>
                </span>
                <!-- Product Rating Stars -->
                <div class="product-rating">
                  <i class="material-icons star">star</i>
                  <i class="material-icons star">star</i>
                  <i class="material-icons star">star</i>
                  <i class="material-icons star">star_half</i>
                  <i class="material-icons star">star_outline</i>
                </div>
                <form action="/add-to-cart/<%= item.id %>" method="post">
                  <div class="row">
                    <div class="col s12 center-align">
                      <input
                        type="submit"
                        value="Buy Now"
                        class="btn hover-button"
                      />
                    </div>
                    <div class="col s6">
                      <label for="quantity">Qty:</label>
                      <input
                        type="number"
                        name="quantity"
                        id="quantity"
                        placeholder="Qty"
                        min="1"
                        value="1"
                        class="center-align"
                        style="height: 2rem; text-align: center"
                      />
                    </div>
                    <div class="col s6">
                      <label for="price">Price:</label>
                      <input
                        type="text"
                        id="price"
                        placeholder="Price"
                        value="$<%= item.price %>"
                        style="height: 2rem; text-align: center"
                        disabled
                      />
                    </div>
                  </div>
                </form>
              </div>
              <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">
                  <%= item.product_name %>
                  <i class="material-icons right">close</i>
                </span>
                <p><%= item.description %></p>
              </div>
            </div>
          </div>

          <% }) %> <% } else { %>
          <p>No products found.</p>
          <% } %>
        </div>
      </div>
      <br /><br />

      <!-- Pagination Controls -->
     <%- include('../partials/pagination')%>
      <br />
    </main>

    <!-- place footer here -->
    <%- include("../partials/footer.ejs") %>
  </body>
  <!-- jquery -->
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <!-- D3 script for ploting graphs -->
  <script src="https://d3js.org/d3.v7.min.js"></script>

  <!--------------------------------- custom js script ----------------------------------------->
  <script src="../../public/js/script.js"></script>

  <!-- Search Function Script -->
  <script>
    function myFunction() {
      const searchInput = document.getElementById("search");
      const searchText = searchInput.value.toLowerCase();
      const productItems = document.querySelectorAll(".card");
      console.log(searchText);
      productItems.forEach((item) => {
        const name = item
          .querySelector("card-title ")
          .textContent.toLowerCase();
        if (name.includes(searchText)) {
          item.classList.remove("hidden");
        } else {
          item.classList.add("hidden");
        }
      });
    }
  </script>


