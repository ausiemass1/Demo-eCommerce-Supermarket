          <table>
              <thead>
                <tr>
                    <th>id</th>
                    <th>Product Name</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th>Keywords</th>
                    <th>Category</th>
                    <th>Brand</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
              </thead>
      
              <tbody>
                
                <% results.forEach(product=>{ %>
                  <tr>
                    <td><%= product.id %></td>
